{% extends 'base.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block body %}
<div class="row">
    <h1>Ajouter un article</h1>
</div>
<div class="row">
    <div class="row">
        <form method="POST" action="{{path("app_article_add")}}" class="col s12">

          <div class="row">
            <div class="input-field col s12">
              <input  value="" id="titre" name="title" type="text" class="validate">
              <label for="titre">Titre</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <textarea id="content" name="content" class="materialize-textarea"></textarea>
              <label for="content">Contenu</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <input placeholder="ex. Steve" name="author" id="author" type="text" class="validate">
              <label for="author">Auteur</label>
            </div>
          </div>
          
          <button class="btn waves-effect waves-light" type="submit" name="action" value="ok" >Publier
            <i class="material-icons right">send</i>
          </button>

        </form>
      </div>
</div>
{% endblock %}
